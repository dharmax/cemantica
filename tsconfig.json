{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2020",
    "lib": [
      "dom",
      "esnext",
      "ES2020"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules",
    "build",
    "fe",
    "dist"
  ]
}
